<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.main.reminder.ReminderActivity">

    <Button
        android:id="@+id/buttonReminderOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reminder_on"
        android:onClick="reminderOnClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/turnOffReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reminder_off"
        android:onClick="reminderOffClicked"
        android:layout_marginTop="@dimen/range_half"
        app:layout_constraintEnd_toEndOf="@+id/buttonReminderOn"
        app:layout_constraintStart_toStartOf="@+id/buttonReminderOn"
        app:layout_constraintTop_toBottomOf="@+id/buttonReminderOn" />

</androidx.constraintlayout.widget.ConstraintLayout>